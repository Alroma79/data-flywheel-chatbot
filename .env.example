# Data Flywheel Chatbot Configuration
# Copy this file to .env and update the values

# ======================
# REQUIRED SETTINGS
# ======================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ======================
# DATABASE SETTINGS
# ======================

# Database URL - Railway PostgreSQL connection string
DATABASE_URL=postgresql+psycopg2://${RAILWAY_USERNAME}:${RAILWAY_PASSWORD}@${RAILWAY_HOST}:${RAILWAY_PORT}/${RAILWAY_DATABASE}
# For local development, uncomment and adjust as needed:
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/chatbot

# ======================
# APPLICATION SETTINGS
# ======================

# Application Configuration
APP_NAME=Data Flywheel Chatbot API
DEBUG=false

# Default AI Model Settings
DEFAULT_MODEL=gpt-4o
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=

# ======================
# CORS CONFIGURATION
# ======================

# CORS Origins (comma-separated or JSON array)
CORS_ORIGINS=["http://localhost:3000","https://flywheel-bot-production.up.railway.app"]
# For production, specify exact origins
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# ======================
# RATE LIMITING
# ======================

# Rate limiting settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ======================
# LOGGING CONFIGURATION
# ======================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ======================
# DEMO MODE
# ======================
DEMO_MODE=false
APP_VERSION=v0.3-railway
