# Data Flywheel Chatbot Configuration
# Copy this file to .env and update the values

# ======================
# REQUIRED SETTINGS
# ======================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ======================
# DATABASE SETTINGS
# ======================

# Database URL - SQLite (default) or PostgreSQL
DATABASE_URL=sqlite:///./chatbot.db
# For PostgreSQL: postgresql://username:password@localhost:5432/database_name

# ======================
# APPLICATION SETTINGS
# ======================

# Application Configuration
APP_NAME=Data Flywheel Chatbot API
APP_VERSION=1.0.0
DEBUG=false

# Default AI Model Settings
DEFAULT_MODEL=gpt-4o
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=

# ======================
# CORS CONFIGURATION
# ======================

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=*
# For production, specify exact origins: http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# ======================
# RATE LIMITING
# ======================

# Rate limiting settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ======================
# LOGGING CONFIGURATION
# ======================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
